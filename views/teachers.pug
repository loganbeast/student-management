extends base
block content
    .content
        .finding-box
        form.input-box(method='POST')
                input(id='txt1-search' type='text' name='name' placeholder='Enter name')
                | 
                input(id='img-search' type='submit' value='Search')
        div
            table
                tr
                    th Full Name
                    th Email
                    th Department
                    th 
                        
                each i in teachers
                    tr
                        td= i.full_name
                        td= i.email
                        td= i.department
                        td
                            a(href=`/teachers/${i.teacher_Id}` style='background-color:yellowgreen;text-decoration:none') detail
                             
                        
                        