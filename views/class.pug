extends base
block content
    .content
        .finding-box
                form.input-box(method='POST')
                        input(id='txt1-search' type='text' name='year' placeholder='Enter year')
                        | 
                        input(id='txt2-search' type='text' name='semester' placeholder='Enter semester')
                        input(id='img-search' type='submit' value='Search')
        div
            table
                tr
                    th Name
                    th Room
                    th Building
                    th On
                    th Period
                    th Status
                    th Teacher
                        
                each i in classes
                    tr
                        td= i.subject_name
                        td= i.room
                        td= i.building
                        td= i.class_on
                        td= i.period
                        td= i.status
                        td
                            a(href=`/teachers/${i.teacher_Id}` style='background-color:yellowgreen;text-decoration:none') #{i.full_name}
                        